<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
{{ 'animation.css' | asset_url | stylesheet_tag }}
<section>
    <div class="h-section-inner"
    style="
    --mgtb-top:{{ section.settings.mgtb_top }}px;
    --mgtb-bottom:{{ section.settings.mgtb_bottom }}px;
    --color:{{ section.settings.color }};
    --height:{{ section.settings.height}}px;
    "
    >
      <div class="h-container-coll">
        <div class="h-collection-inner"
        style="--style:{{ section.settings.style }};
        "
      >
          <div class="h-collection-content" style="">
            <div>
                <h3 class="text-bl h-coll-text-hd">
                    <span>
                      Shop
                        <br class="xd">
                      by <span class="h-heading-highlight">{{ section.settings.heading_highlight }}</span>
                    </span>
                </h3>
            </div>
            <div class="h-btn-inner">
                <a href="{{ section.settings.link }}" class="h-btn h-coll-btn-border btn-hv-one"
                style="
                --btn-width:{{section.settings.hd_coll_btn_w}}px;
                --btn-height:{{section.settings.hd_coll_btn_h}}px;
                --btn-font-fml :{{ section.settings.coll_btn_font_fml }};
                --btn-fs:{{ section.settings.hd_coll_btn_fs}}px;
                --btn-mg-bottom:{{ section.settings.hd_coll_btn_mgbt }}px; 
                --btn-text-color:{{ section.settings.hd_coll_btn_text_color }};
                --btn-bgr-color:{{section.settings.hd_coll_btn_bgr_color}};
                --border-size:{{ section.settings.hd_coll_btn_bd_size }}px
                ">
                    <span>{{ section.settings.heading_btn}}</span> <span class=""><svg style="margin-left:8px" class="t4s-btn-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 489.6 489.6"><path d="M0,244.8c0,9.5,7.7,17.2,17.2,17.2h414.2L322.9,370.4c-3.3,3.3-5,7.7-5,12.1s1.7,8.8,5,12.1c6.7,6.7,17.6,6.7,24.3,0 l137.6-137.7c6.4-6.4,6.4-17.8,0-24.3L347.1,95c-6.7-6.7-17.6-6.7-24.3,0c-6.7,6.7-6.7,17.6,0,24.3l108.4,108.4H17.1 C7.6,227.6,0,235.3,0,244.8z"></path></svg></span>
                </a>
            </div>
          </div>
          <div class="h-section-coll-inner" style="">
            <div class="h-collection-sl carousel" data-flickity='{ "wrapAround": true }'>
              {% for block in section.blocks %}
              <div class="h-collection-sl-item carousel-cell" style="">
                <div class="h-coll-img">
                  <a href="">
                    <img src="{{ block.settings.image | image_url }}" alt=""
                    width="100%"
                    height="100%"
                    style="object-fit: cover"
                >
                  </a>
                </div>
                <div class="h-coll-btn btn-hv-two"
                style="
                --btn-w:{{ section.settings.it_coll_btn_w }}px;
                --btn-h:{{ section.settings.it_coll_btn_h }}px;
                --btn-pdlr:{{ section.settings.it_coll_btn_pdlr }}px;
                --btn-pdtb:{{ section.settings.it_coll_btn_pdtb }}px;
                --btn-color:{{ section.settings.it_coll_btn_color }};
                ">
                  <span>
                    <a href="{{ block.settings.link }}" style="text-decoration: none;">
                      <span class="h-text-bl" style="
                        --text-fml:{{ section.settings.it_coll_btn_fml }};
                                --text-fs:{{ section.settings.it_coll_btn_fs }}px;
                                --text-fw:{{ section.settings.it_coll_btn_fw }};
                                --text-lh:{{ section.settings.it_coll_btn_lh }}px;
                                --color:{{ section.settings.it_coll_btn_text_color }};
                        ">{{ block.settings.it_coll_btn_text }}</span>
                    </a>
                  </span>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
 </section>
<script defer="async" src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

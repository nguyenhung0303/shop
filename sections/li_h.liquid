<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{{ 'reponsive_h.css' | asset_url | stylesheet_tag }}
    {{ 'style_h.css' | asset_url | stylesheet_tag }}
    {{ 'h-hv-one.css' | asset_url | stylesheet_tag }}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<style>
    .ggg {
        width: var(--item-w); /* Sử dụng setting để điều chỉnh độ rộng */
    }
</style>
<section>
    <div class="h-section-inner"
        style="
                    --mgtb-top:{{ section.settings.mgtb_top }}px;
                    --mgtb-bottom:{{ section.settings.mgtb_bottom }}px;
                    --color:{{ section.settings.color }};
                    "
    >
    <div class="h-container">
        <div class="li-inner row">
                {% for block in section.blocks %}
                    <div class=" col li-item">
                        <div class="h-banner-inner"> 
                            <div class="h-banner-content h-col-inner text-center"
                            style="
                            --pd-tb-top:{{ block.settings.pd_tb_top }}px;
                            --pd-tb-bottom:{{ block.settings.pd_tb_bottom }}px;
                            --pdil-tb-start:{{ block.settings.pdil_tb_start }}px;
                            --pdil-tb-end:{{ block.settings.pdil_tb_end }}px;
                            --bdrd-tb:{{ block.settings.bdrd_tb }}px;
                            --bd-color:{{ block.settings.bd_color }};
                            --bd-thickness:{{ block.settings.thickness }}px;
                            --color:{{ block.settings.color }}
                            ">   
                                    <div class="h-banner-img h-img-inner"
                                    style="
                                    --max-width:{{ block.settings.w-img }}px;
                                    --mgtb-bottom-img:{{ block.settings.mgtb_bottom_img }}px;
                                    "
                                    >   
                                        <img src="{{ block.settings.image | image_url }}" alt=""
                                            width="100%"
                                            height="auto"
                                            >   
                                    </div>
                                <h4 class="h-text-bl"
                                style="
                                --text-fml:{{ block.settings.title_fml }};
                                --text-fs:{{ block.settings.title_fs }}px;
                                --text-fw:{{ block.settings.title_fw }};
                                --text-lh:{{ block.settings.title_lh }}px;
                                --text-ls:{{ block.settings.title_ls }}px;
                                --text-fonts:{{ block.settings.title_style }}px;
                                --color:{{ block.settings.title_color }};
                                --mg-bottom:{{ block.settings.title_mg_bottom}}px;
                                "
                                >
                                  {{ block.settings.li_title }}  
                                </h4>
                                <p
                                    class="h-text-bl"
                                    style="
                                    --text-fml:{{ block.settings.ds_fml }};
                                    --text-fs:{{ block.settings.ds_fs }}px;
                                    --text-fw:{{ block.settings.ds_fw }};
                                    --text-lh:{{ block.settings.ds_lh }}px;
                                    --text-ls:{{ block.settings.ds_ls }}px;
                                    --text-fonts:{{ block.settings.ds_style }}px;
                                    --color:{{ block.settings.ds_color }};
                                    --mg-bottom:{{ block.settings.ds_magin_bottom}}px;
                                    ">
                                  {{ block.settings.li_des }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </div>
    </div>
    </div>
</section>
<script defer="async" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

{{ 'reponsive_h.css' | asset_url | stylesheet_tag }}
    {{ 'style_h.css' | asset_url | stylesheet_tag }}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
        <section>
            <div class="section">
                <div class="section-inner h-service"
                    style="
                    {% if section.settings.flickity_btn == false %}--flickity-btn:none;{% endif %}{% if section.settings.flickity_dot == false %}--flickity-dot:none;{% endif %}
                    --service-mg-top:{{ section.settings.service_mg_top }}px;
                    --service-mg-bottom:{{ section.settings.service_mg_bottom }}px;
                    --service-bgr-color:{{ section.settings.service_bgr_color }};
                    "
                >
                    <div class="h-container">
                        <div class="carousel"
                            data-flickity='{ "groupCells": true }'> 
                                {% for block in section.blocks %}
                                    <div class="h_carousel_cell carousel-cell">
                                        <div class="h-shipping-inner">
                                            <div class="h-shipping-icon">    
                                                    <img class="h_animation_img_service" src="{{ block.settings.image | image_url }}" alt=""
                                                         width="100%" height="100%"
                                                        style="
                                                        --animation: {{ section.settings.btn_animation }};
                                                        ">   
                                            </div>
                                            <div class="h-shipping-content">
                                                <h3 class="h-shipping-title h-service-title"
                                                style="
                                                --title-fml:{{ section.settings.title_fml }};
                                                --title-color:{{ section.settings.title_color }};
                                                --title-fs:{{ section.settings.title_fs }}px;
                                                --title-fw:{{ section.settings.title_fw }};
                                                "
                                                >{{ block.settings.shipping_title }}</h3>
                                                <div class="h-shipping-des h-service-ds"
                                                    style="
                                                    --ds-fml:{{ section.settings.ds_fml }};
                                                    --ds-color:{{ section.settings.ds_color }};
                                                    --ds-fs:{{ section.settings.ds_fs }}px;
                                                    --ds-fw:{{ section.settings.ds_fw }};
                                                    "
                                                >
                                                    <p>{{ block.settings.shipping_des }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                    </div>
                </div>
            </div>
        </section>
    <script src="{{ 'h_animation.js' | asset_url }}" defer="defer"></script>
    <script defer="async" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script defer="async" src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    {% schema %}
    {
    "name": "service_h",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "select",
            "id": "btn_animation",
            "label": "Choose Animation",
            "options": [
              {
                "value": "bounceIn",
                "label": "Bounce In"
              },
              {
                "value": "zoomIn",
                "label": "Zoom In"
              },
              {
                "value": "fadeIn",
                "label": "Fade In"
              }
            ],
            "default": "bounceIn"
          },
        {
            "type": "range",
            "id": "service_height",
            "min": 0,
            "max": 1000,
            "step": 10,
            "default": 200,
            "unit": "px",
            "label": "service height"
          },
          {
            "type": "range",
            "id": "service_mg_top",
            "min": 0,
            "max": 1000,
            "step": 10,
            "default": 0,
            "unit": "px",
            "label": "service magin top"
          },
          {
            "type": "range",
            "id": "service_mg_bottom",
            "min": 0,
            "max": 1000,
            "step": 10,
            "default": 0,
            "unit": "px",
            "label": "service magin bottom"
          },
          {
            "type": "color",
            "id": "service_bgr_color",
            "default": "#fff",
            "label": "service Bgr color"
          },
          {
            "type": "select",
            "id": "title_fml",
            "options": [
              {
                "value": "Roboto",
                "label": "Roboto"
              },
              {
                "value": "Open Sans",
                "label": "Open Sans"
              },
              {
                "value": "Lato",
                "label": "Lato"
              },
              {
                "value": "Montserrat",
                "label": "Montserrat"
              },
              {
                "value": "Poppins",
                "label": "Poppins"
              }
            ],
            "default": "Lato",
            "label": "Title Font"
          },
          {
            "type": "color",
            "id": "title_color",
            "default": "#000000",
            "label": "Title text Color"
          },
          {
            "type": "range",
            "id": "title_fs",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 20,
            "unit": "px",
            "label": "Title size"
          },
          {
            "type": "range",
            "id": "title_fw",
            "min": 100,
            "max": 1000,
            "step": 100,
            "default": 500,
            "label": "Title font weight"
          },
          {
            "type": "select",
            "id": "ds_fml",
            "options": [
              {
                "value": "Roboto",
                "label": "Roboto"
              },
              {
                "value": "Open Sans",
                "label": "Open Sans"
              },
              {
                "value": "Lato",
                "label": "Lato"
              },
              {
                "value": "Montserrat",
                "label": "Montserrat"
              },
              {
                "value": "Poppins",
                "label": "Poppins"
              }
            ],
            "default": "Lato",
            "label": "Description Font"
          },
          {
            "type": "color",
            "id": "ds_color",
            "default": "#000000",
            "label": "Description text Color"
          },
          {
            "type": "range",
            "id": "ds_fs",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 20,
            "unit": "px",
            "label": "Description size"
          },
          {
            "type": "range",
            "id": "ds_fw",
            "min": 100,
            "max": 1000,
            "step": 100,
            "default": 500,
            "label": "Description font weight"
          },
          {
            "type": "checkbox",
            "id": "flickity_dot",
            "label": "Dot",
            "default": false
          },
          {
            "type": "checkbox",
            "id": "flickity_btn",
            "label": "Arrow",
            "default": false
          },
    ],
    "presets": [
        {
        "name": "service_h"
        }
    ],
    "blocks": [
        {
        "type": "hung",
        "name": "shipping Block",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Select Image"
            },
            {
                "type": "text",
                "id": "shipping_title",
                "default": "title",
                "label": "Title",
            },
            
            {
                "type": "inline_richtext",
                "id": "shipping_des",
                "default": "des",
                "label": "des"
            },
        ]
        }

    ]
    }
    {% endschema %}
    